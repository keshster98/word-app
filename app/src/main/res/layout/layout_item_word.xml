<!--app:cardElevation provides the shadowy look around the edges of the note card-->
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/space_m"
    app:cardElevation="@dimen/space_xxxs"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/llWord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:paddingTop="@dimen/space_xs"
        android:paddingBottom="@dimen/space_xxxl"
        android:paddingHorizontal="@dimen/space_xl">

        <!--Word-->

        <!--android:ellipsize allows for ...-->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/word"
            android:textStyle="bold"
            android:ellipsize="end"
            style="@style/TextAppearance.Material3.TitleMedium"/>

        <!--Definition-->

        <!--android:maxLines shows at least X lines of the content within the size of the card before the ellipsize acts in at the end-->
        <TextView
            android:id="@+id/tvMeaning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_xs"
            android:text="@string/definition"
            android:maxLines="5"
            android:ellipsize="end"
            style="@style/TextAppearance.Material3.TitleSmall"/>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
